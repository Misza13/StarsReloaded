<UserControl x:Class="StarsReloaded.View.Controls.Fragments.HabitationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             DataContext="{Binding Source={StaticResource Locator}, Path=HabitationBarControl}"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="400">
    <Canvas x:Name="BarCanvas"
        Height="24"
        Width="Auto"
        Background="Black"
        SizeChanged="Canvas_SizeChanged">
        
        <Rectangle
            Visibility="{Binding HabBarVisibility}"
            Height="{Binding ActualHeight, ElementName=BarCanvas, Mode=OneWay}"
            Width="{Binding HabBarWidth}"
            Fill="{Binding BarFillColor}">
            <Rectangle.RenderTransform>
                <TranslateTransform X="{Binding HabBarLeft}" Y="0"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        
        <Line
            Visibility="{Binding OriginalValueVisibility}"
            X1="0" Y1="8"
            X2="0" Y2="16"
            Stroke="{Binding GraphStrokeColor}">
            <Line.RenderTransform>
                <TranslateTransform X="{Binding OriginalValuePos}"/>
            </Line.RenderTransform>
        </Line>

        <Line
            Visibility="{Binding OriginalValueVisibility}"
            X1="-4" Y1="12"
            X2="4" Y2="12"
            Stroke="{Binding GraphStrokeColor}">
            <Line.RenderTransform>
                <TranslateTransform X="{Binding OriginalValuePos}"/>
            </Line.RenderTransform>
        </Line>

        <Line
            Visibility="{Binding OriginalValueVisibility}"
            X1="{Binding OriginalValuePos}" Y1="12"
            X2="{Binding AfterTerraformPos}" Y2="12"
            Stroke="{Binding GraphStrokeColor}"/>

        <Polygon
            Visibility="{Binding CurrentValueVisibility}"
            Points="0,6 6,12 0,18 -6,12"
            Stroke="{Binding GraphStrokeColor}">
            <Polygon.RenderTransform>
                <TranslateTransform X="{Binding CurrentValuePos}" Y="0"/>
            </Polygon.RenderTransform>
        </Polygon>
    </Canvas>
</UserControl>
