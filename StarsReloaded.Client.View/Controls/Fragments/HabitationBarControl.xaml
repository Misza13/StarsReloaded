<UserControl x:Class="StarsReloaded.View.Controls.Fragments.HabitationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             DataContext="{Binding Source={StaticResource Locator}, Path=HabitationBarControl}"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LeftMarginWidth}"/>
            <ColumnDefinition Width="{Binding BarWidth}"/>
            <ColumnDefinition Width="{Binding RightMarginWidth}"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Grid.ColumnSpan="3" Fill="Black" StrokeThickness="0"/>
        <Rectangle Grid.Column="1" Fill="{Binding FillColor}" StrokeThickness="0"/>
    </Grid>
</UserControl>
