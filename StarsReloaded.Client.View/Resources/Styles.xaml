<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GenericLabel" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style x:Key="IroniumLabel" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource GenericLabel}">
        <Setter Property="Foreground" Value="Blue"/>
    </Style>
    <Style x:Key="BoraniumLabel" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource GenericLabel}">
        <Setter Property="Foreground" Value="Green"/>
    </Style>
    <Style x:Key="GermaniumLabel" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource GenericLabel}">
        <Setter Property="Foreground" Value="Yellow"/>
    </Style>
</ResourceDictionary>